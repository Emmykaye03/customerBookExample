@model IEnumerable<dataTable.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .row.table{
        margin-top: 15px;
    }
    .panel-heading{
        font-weight: bold;
    }
</style>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width = device-width" />
    <title>Customer</title>
</head>
<body>
    <div class="row">
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-11">
                            Atria Customers
                        </div>
                        <div class="col-md-1">
                            @Html.ActionLink("Add", "Create", null, new { @class = "btn btn-primary"})
                        </div>
                    </div>
                </div>
                <div class="panel panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-striped table-condensed">
                                <tbody>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ItemID)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Title)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Description)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Date)
                                        </th>
                                        <th>&nbsp;</th>
                                    </tr>
                                    @foreach (var item in Model)
                                    {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ItemID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td class="text-right">
                                        @Html.ActionLink("View", "View", new { id = item.ItemID }, new { @class = "btn btn-default" })
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ItemID }, new { @class = "btn btn-primary" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ItemID }, new { @class = "btn btn-warning" })
                                    </td>
                                </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
